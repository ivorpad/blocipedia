<div class="content">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="title">Blocipedia: Social, Markdown Wikis</h1>

    <div class="jumbotron welcome-jumbo">

      <% unless current_user.present? %>
          <h3 class="col-md-offset-2">Create and share Markdown Wikis</h3>
          <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-success btn-lg col-md-offset-5 welcome-btn' %>

      <% else %>
          <h3 class="col-md-offset-3">Go to your Markdown Wikis</h3>
          <%= link_to "See Wikis", wikis_path, class: 'btn btn-success btn-lg col-md-offset-5 welcome-btn' %>

      <% end %>
    </div>


  </div>
</div>
