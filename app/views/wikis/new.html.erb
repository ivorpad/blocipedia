<h1>Add new wiki</h1>
<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Odit, enim.</p>

<div class="row">
  <div class="col-md-4">
    <%= form_for @wiki do |f| %>

    <% @wiki.errors.full_messages.each do |msg| %>
      <%= content_tag :div, msg, class: 'alert bg-danger' %>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
        
    <div class="form-group">
      <%= f.label :private %>
      <%= f.check_box :private %>
    </div>

    <div class="form-group">
      <%= f.submit "Create wiki", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
